<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/indCharacter_ivCharacterImage"
        android:layout_width="267dp"
        android:layout_height="441dp"
        android:layout_marginTop="4dp"

        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.cardview.widget.CardView
        android:id="@+id/indCharacter_cvInfo"
        Of="@id/indCharacter_ivCharacterImage"
        android:layout_width="435dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:alpha="0.9"
        android:foregroundGravity="center_horizontal"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toStartOf="@+id/indCharacter_ivCharacterImage"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/indCharacter_tvCaractElemento1"
                        style="@style/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/element"
                        android:textColor="@color/primaryLightColor" />

                    <TextView
                        android:id="@+id/textViewCaractArma1"
                        style="@style/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/weapon"
                        android:textColor="@color/primaryLightColor" />

                    <TextView
                        android:id="@+id/indCharacter_tvCaractAtributo1"
                        style="@style/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="4dp"
                        android:text="@string/attribute"
                        android:textColor="@color/primaryLightColor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewCaractArma1" />

                    <TextView
                        android:id="@+id/indCharacter_tvCaractRegion1"
                        style="@style/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/region"
                        android:textColor="@color/primaryLightColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/indCharacter_tvCharacterElement"
                        style="@style/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/example" />

                    <TextView
                        android:id="@+id/indCharacter_tvCharacterWeaponType"
                        style="@style/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/example" />

                    <TextView
                        android:id="@+id/indCharacter_tvCharacterSubStat"
                        style="@style/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/example" />

                    <TextView
                        android:id="@+id/indCharacter_tvCharacterRegion"
                        style="@style/mediumTextSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/example" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/indCharacter_ivElement"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="end"
                        android:alpha="1"
                        android:src="@drawable/element_hydro" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/mediumTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/description"
                android:textColor="@color/primaryLightColor" />

            <TextView
                android:id="@+id/indCharacter_tvDescription"
                style="@style/normalTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:alpha="0.9"
        android:foregroundGravity="center_horizontal"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/indCharacter_cvInfo"
        app:layout_constraintStart_toStartOf="@+id/indCharacter_cvInfo">

        <TextView
            android:id="@+id/indCharacter_tvCharacterName"
            style="@style/capitalTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="8dp"
            android:text="@string/example"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>